<h1>Listing routes</h1>

<h3><%= link_to 'New Route', new_route_path %></h3>
<h3><%= link_to 'Check Out Pickup Point Time Details', pickup_point_time_details_path %></h3>
<h3><%= link_to 'Check Out Drop Point Time Details', drop_point_time_details_path %></h3>

<br>

<table>
  <thead>
    <tr>
      <th colspan="0">Route Name</th>
      <th colspan="3"></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @routes.each do |route| %>
      <tr>
        <td><%= route.name %></td>
        <td><%= link_to 'Show', route %></td>
        <td><%= link_to 'Edit', edit_route_path(route) %></td>
        <td><%= link_to 'Destroy', route, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


